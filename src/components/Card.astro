---
interface Props {
    title: string;
    tagline: string;
    description: string;
    github: string;
    link: string;
    icon: string;
}
export type { Props as CardProps };

const props = Astro.props;
---

<div
    class="relative overflow-clip sm:w-32 md:w-auto md:h-[32em] md:aspect-[3.2/4] flex flex-col p-8 pb-4 rounded-3xl card bg-[rgba(255,255,255,0.01)] border border-[rgba(255,255,255,0.1)] group"
>
    <div class="flex-1">
        <div class="flex justify-between lg:pb-4">
            <h3>{props.title}</h3>
            <a href={props.github} class="opacity-20 hover:opacity-50">
                <img src="/github.svg" alt="Github Logo" />
            </a>
        </div>
        <div class="py-4 text-3xl">{props.tagline}</div>
        <p class="text-neutral-300">
            {props.description}
        </p>
    </div>
    <div class="py-4">
        <a href={props.link} class="rounded-lg">Open â†—</a>
    </div>
    <img
        class="absolute w-48 transition-all -right-5 -bottom-5 rotate-12 opacity-10 group-hover:right-5 group-hover:bottom-5 group-hover:opacity-25"
        src={props.icon}
        alt=""
    />
</div>

<style>
    .card::before {
        content: "";
        position: absolute;
        border-radius: inherit;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0;
        background: radial-gradient(
            circle at 100% 100%,
            rgba(255, 255, 255, 0.03) 0%,
            rgba(255, 255, 255, 0) 100%
        );
        transition: opacity 0.2s ease-out;
    }

    .card:hover::before {
        opacity: 1;
    }
</style>
